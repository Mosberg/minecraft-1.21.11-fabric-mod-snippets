{
  "Screen Handler": {
    "prefix": "screen.handler",
    "description": "Create a screen handler for GUI",
    "body": [
      "public class ${1:MyScreenHandler} extends ScreenHandler {",
      "    private final Inventory inventory;",
      "    ",
      "    public ${1:MyScreenHandler}(int syncId, PlayerInventory playerInventory) {",
      "        this(syncId, playerInventory, new SimpleInventory(${2:9}));",
      "    }",
      "    ",
      "    public ${1:MyScreenHandler}(int syncId, PlayerInventory playerInventory, Inventory inventory) {",
      "        super(${3:MOD_SCREEN_HANDLERS.MY_SCREEN_HANDLER}, syncId);",
      "        this.inventory = inventory;",
      "        checkSize(inventory, ${2:9});",
      "        inventory.onOpen(playerInventory.player);",
      "        ",
      "        ${4:// Block inventory slots}",
      "        ${5:// addSlot(new Slot(inventory, 0, 80, 20));}",
      "        ",
      "        ${6:// Player inventory slots}",
      "        int i;",
      "        for (i = 0; i < 3; ++i) {",
      "            for (int j = 0; j < 9; ++j) {",
      "                addSlot(new Slot(playerInventory, j + i * 9 + 9, 8 + j * 18, 84 + i * 18));",
      "            }",
      "        }",
      "        ",
      "        ${7:// Player hotbar slots}",
      "        for (i = 0; i < 9; ++i) {",
      "            addSlot(new Slot(playerInventory, i, 8 + i * 18, 142));",
      "        }",
      "    }",
      "    ",
      "    @Override",
      "    public ItemStack quickMove(PlayerEntity player, int slot) {",
      "        ItemStack itemStack = ItemStack.EMPTY;",
      "        Slot slot2 = this.slots.get(slot);",
      "        if (slot2.hasStack()) {",
      "            ItemStack itemStack2 = slot2.getStack();",
      "            itemStack = itemStack2.copy();",
      "            if (slot < ${2:9}) {",
      "                if (!insertItem(itemStack2, ${2:9}, slots.size(), true)) {",
      "                    return ItemStack.EMPTY;",
      "                }",
      "            } else if (!insertItem(itemStack2, 0, ${2:9}, false)) {",
      "                return ItemStack.EMPTY;",
      "            }",
      "            ",
      "            if (itemStack2.isEmpty()) {",
      "                slot2.setStack(ItemStack.EMPTY);",
      "            } else {",
      "                slot2.markDirty();",
      "            }",
      "        }",
      "        return itemStack;",
      "    }",
      "    ",
      "    @Override",
      "    public boolean canUse(PlayerEntity player) {",
      "        return inventory.canPlayerUse(player);",
      "    }",
      "}",
      "$0"
    ]
  },

  "Screen Handler Registration": {
    "prefix": "screen.handler.register",
    "description": "Register a screen handler type",
    "body": [
      "public static final ScreenHandlerType<${1:MyScreenHandler}> ${2:MY_SCREEN_HANDLER} = Registry.register(",
      "    Registries.SCREEN_HANDLER,",
      "    Identifier.of(${3:MOD_ID}, \"${4:my_screen_handler}\"),",
      "    new ScreenHandlerType<>(${1:MyScreenHandler}::new, FeatureFlags.VANILLA_FEATURES)",
      ");",
      "$0"
    ]
  },

  "Handled Screen": {
    "prefix": "screen.handled",
    "description": "Create a handled screen (client-side GUI)",
    "body": [
      "@Environment(EnvType.CLIENT)",
      "public class ${1:MyScreen} extends HandledScreen<${2:MyScreenHandler}> {",
      "    private static final Identifier TEXTURE = Identifier.of(${3:MOD_ID}, \"textures/gui/container/${4:my_screen}.png\");",
      "    ",
      "    public ${1:MyScreen}(${2:MyScreenHandler} handler, PlayerInventory inventory, Text title) {",
      "        super(handler, inventory, title);",
      "    }",
      "    ",
      "    @Override",
      "    protected void drawBackground(DrawContext context, float delta, int mouseX, int mouseY) {",
      "        int x = (width - backgroundWidth) / 2;",
      "        int y = (height - backgroundHeight) / 2;",
      "        context.drawTexture(TEXTURE, x, y, 0, 0, backgroundWidth, backgroundHeight);",
      "    }",
      "    ",
      "    @Override",
      "    public void render(DrawContext context, int mouseX, int mouseY, float delta) {",
      "        renderBackground(context, mouseX, mouseY, delta);",
      "        super.render(context, mouseX, mouseY, delta);",
      "        drawMouseoverTooltip(context, mouseX, mouseY);",
      "    }",
      "    ",
      "    @Override",
      "    protected void init() {",
      "        super.init();",
      "        ${5:// playerInventoryTitleY = 10000; // Hide player inventory title}",
      "        ${6:// titleX = (backgroundWidth - textRenderer.getWidth(title)) / 2; // Center title}",
      "    }",
      "}",
      "$0"
    ]
  },

  "Screen Registration Client": {
    "prefix": "screen.register.client",
    "description": "Register screen on client side",
    "body": [
      "HandledScreens.register(${1:MOD_SCREEN_HANDLERS.MY_SCREEN_HANDLER}, ${2:MyScreen}::new);"
    ]
  }
}
